<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="butt_style" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">40sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">80sp</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_rowWeight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">10sp</item>
        <item name="android:background">@drawable/drawable_calc_but</item>
    </style>

    <style name="right_butt_style" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">50sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">80sp</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_rowWeight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">10sp</item>
        <item name="android:background">@drawable/drawable_calc_right_but</item>
    </style>

    <style name="top_butt_style" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">40sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">80sp</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_rowWeight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">10sp</item>
        <item name="android:background">@drawable/drawable_calc_top_but</item>
    </style>
</resources>